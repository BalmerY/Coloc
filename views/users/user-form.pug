extends ../layout.pug

block content 
    div(class = "d-flex flex-row justify-content-center")
        form(class = "card w-50 mt-5" method = "post" action="/users/signup")
            div(class = "card-header") Inscription
            div(class = "card-body")
                div(class = "mb-3")
                    label(for="name") Nom
                    input(class = "form-control" type= "text" name = "name")
                div(class = "mb-3")
                    label(for="password") Mot de passe
                    input(class = "form-control" type= "password" name = "password") 
                div(class = "mb-3")
                    label(for="email") Email
                    input(class = "form-control" type= "email" name = "email") 
                    if errors 
                        ul(class = "my-2")
                            each error in errors
                                li(class="text-danger")= error
                div(class = "w-100")
                    input(type = "submit" value = "inscription" class = "btn btn-primary ms-auto d-block")